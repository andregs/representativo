{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/public/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "alwaysStrict": true,
    "pretty": true
  }
}

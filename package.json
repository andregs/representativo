{
  "name": "representativo",
  "description": "Aplicativo que visa ajudar os eleitores a escolherem melhor os seus candidatos.",
  "version": "0.0.0",
  "author": "André Gomes <andregs@gmail.com> (http://andregs.com/)",
  "license": "Apache-2.0",
  "angular-cli": {},
  "scripts": {
    "reinit": "ng init -p re -sd client --style scss --routing true",
    "db:create": "ts-node script/create-db.script.ts",
    "db:drop": "ts-node script/drop-db.script.ts",
    "db:recreate": "run-s -s db:drop db:create",
    "start": "node dist/server/server.js",
    "start-dev": "nodemon --inspect -w dist -i dist/public",
    "dev": "run-p -s build-watch test-watch",
    "clean": "rimraf dist coverage .nyc_output",
    "build": "run-p -s build:*",
    "build-watch": "run-p -s \"build:client -- -w\" \"build:server -- -w\"",
    "build-prod": "npm-run-all --silent clean -p \"build:client -- -prod\" build:server",
    "build:client": "ng build --progress=false",
    "build:server": "tsc -p server",
    "lint": "tslint client/**/*.ts server/**/*.ts",
    "pretest": "npm run lint",
    "test": "nyc node dist/server/jasmine.js",
    "test-watch": "chokidar dist/client dist/server -c \"nyc node dist/server/jasmine.js\"",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "private": true,
  "main": "dist/server/server.js",
  "homepage": "https://github.com/andregs/representativo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andregs/representativo.git"
  },
  "bugs": {
    "url": "https://github.com/andregs/representativo/issues"
  },
  "directories": {
    "doc": "doc"
  },
  "dependencies": {
    "@types/node": "7.0.12",
    "arangojs": "5.6.0",
    "body-parser": "1.17.1",
    "cerialize": "0.1.14",
    "express": "4.15.2",
    "express-jwt": "5.1.0",
    "lodash": "4.17.4",
    "npm-run-all": "4.0.2",
    "ts-node": "3.0.2",
    "typescript": "2.2.2"
  },
  "devDependencies": {
    "@angular/animations": "4.0.1",
    "@angular/cli": "1.0.0",
    "@angular/common": "4.0.1",
    "@angular/compiler": "4.0.1",
    "@angular/compiler-cli": "4.0.1",
    "@angular/core": "4.0.1",
    "@angular/flex-layout": "2.0.0-beta.7",
    "@angular/forms": "4.0.1",
    "@angular/http": "4.0.1",
    "@angular/material": "git+https://github.com/angular/material2-builds.git",
    "@angular/platform-browser": "4.0.1",
    "@angular/platform-browser-dynamic": "4.0.1",
    "@angular/platform-server": "4.0.1",
    "@angular/router": "4.0.1",
    "@types/body-parser": "1.16.2",
    "@types/express": "4.0.35",
    "@types/express-jwt": "0.0.34",
    "@types/hammerjs": "2.0.34",
    "@types/jasmine": "2.5.47",
    "@types/jsonwebtoken": "7.2.0",
    "@types/lodash": "4.14.61",
    "@types/supertest": "2.0.0",
    "angular2-jwt": "0.2.0",
    "auth0-lock": "10.14.0",
    "chokidar-cli": "1.2.0",
    "core-js": "2.4.1",
    "eslint": "3.18.0",
    "hammerjs": "2.0.8",
    "jasmine": "2.5.3",
    "jasmine-core": "2.5.2",
    "jsonwebtoken": "7.3.0",
    "material-design-icons": "3.0.1",
    "nodemon": "1.11.0",
    "normalize.css": "6.0.0",
    "nyc": "10.2.0",
    "protractor": "5.1.1",
    "protractor-console": "2.0.1",
    "reflect-metadata": "0.1.10",
    "rimraf": "2.6.1",
    "rxjs": "5.2.0",
    "supertest": "3.0.0",
    "tslint": "5.0.0",
    "zone.js": "0.8.5"
  },
  "keywords": [
    "política",
    "eleições",
    "eleição",
    "eleitor",
    "eleitores",
    "voto",
    "candidatos",
    "candidato",
    "partidos",
    "partidos políticos",
    "representatividade"
  ]
}

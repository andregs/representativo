{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "npm install",
      "args": ["install"]
    },
    {
      "taskName": "npm run (lista todas as tarefas de build)",
      "args": ["run"]
    },
    {
      "taskName": "npm run build",
      "args": ["run", "-s", "build"],
      "isBuildCommand": true
    },
    {
      "taskName": "npm run build-prod (para ambiente de produção)",
      "args": ["run", "-s", "build-prod"]
    },
    {
      "taskName": "npm run build-watch",
      "args": ["run", "-s", "build-watch"]
    },
    {
      "taskName": "npm run clean",
      "args": ["run", "-s", "clean"]
    },
    {
      "taskName": "npm run db:create",
      "args": ["run", "-s", "db:create"]
    },
    {
      "taskName": "npm run db:drop",
      "args": ["run", "-s", "db:drop"]
    },
    {
      "taskName": "npm run db:recreate",
      "args": ["run", "-s", "db:recreate"]
    },
    {
      "taskName": "npm run dev (build-watch & test-watch)",
      "args": ["run", "-s", "dev"],
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "taskName": "npm run e2e",
      "args": ["run", "-s", "e2e"]
    },
    {
      "taskName": "npm run start (inicia um server padrão)",
      "args": ["run", "-s", "start"],
      "isBackground": true
    },
    {
      "taskName": "npm run start-dev (inicia um server de desenvolvimento)",
      "args": ["run", "-s", "start-dev"],
      "isBackground": true
    },
    {
      "taskName": "npm run test",
      "args": ["run", "-s", "test"],
      "isTestCommand": true
    },
    {
      "taskName": "npm run test-watch",
      "args": ["run", "-s", "test-watch"],
      "isBackground": true
    }
  ]
}
